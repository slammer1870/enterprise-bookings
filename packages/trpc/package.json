{
  "name": "@repo/trpc",
  "sideEffects": false,
  "private": true,
  "description": "Shared tRPC library for this monorepo",
  "version": "0.0.1",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "build": "pnpm trpc:generate || true",
    "trpc:generate": "pnpm tsc --project tsconfig.json"
  },
  "dependencies": {
    "@repo/shared-services": "workspace:*",
    "@repo/shared-types": "workspace:*",
    "@repo/shared-utils": "workspace:*",
    "@tanstack/react-query": "^5.17.15",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/tanstack-react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "react": "*",
    "superjson": "1.9.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "*",
    "typescript": "5.7.3"
  },
  "peerDependencies": {
    "next": "*",
    "payload": "*",
    "react": "*",
    "stripe": "*"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.tsx",
      "default": "./src/client.tsx"
    },
    "./server": {
      "types": "./src/server.tsx",
      "default": "./src/server.tsx"
    }
  }
}
